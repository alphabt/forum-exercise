<h1>New Topic</h1>
<%= render partial: 'shared/error_messages', locals: {object: @topic} %>
<%= form_for(@topic) do |t| %>
<div class="form-group">
  <%= t.label :title %><br>
  <%= t.text_field :title, :class => "form-control" %>
</div>
<div class="form-group">
  <%= t.label :content %><br>
  <%= t.text_area :content, :class => "form-control" %>
</div>
<div class="actions">
  <%= t.submit :class => "btn btn-primary" %>
</div>
<% end %>
