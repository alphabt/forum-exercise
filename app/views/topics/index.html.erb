<h1>Topics</h1>
<table class="table">
  <tr>
    <th>Title</th>
    <th>Content</th>
  </tr>
  <% @topics.each do |t| %>
  <tr>
    <td><%= t.title %></td>
    <td><%= t.content %></td>
  </tr>
  <% end %>
</table>
<%= paginate @topics %><br>
<%= link_to "New Topic", new_topic_path, :class => "btn btn-primary"%>
